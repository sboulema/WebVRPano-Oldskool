<krpano version="1.16">	
	<include url="../../../xml/default.xml" />
	<include url="../../../xml/radar.xml" />
	
	<!-- the pano image, set from the html -->
	<image>
		<cube url="pano_%$side%_%s.jpg" />
	</image>
	
	<data name="is3D">false</data>
	<data name="povOffset">77</data>
	<data name="povX">-42</data>
	<data name="povY">10</data>
	
	<hotspot name="logo" keep="true"
		url="../../../img/logo.png"
		ath="0"
		atv="90"
		scale="0.5"
	/>
	
	<hotspot name="hotspot-0" scale="0.8" style="hotspot" ath="-135" atv="2" title="RuimteMidden" onclick="js(vr_loadpano(../RuimteMidden/RuimteMidden.xml))" url="../../../img/hotspot.png" />
	<hotspot name="hotspot-1" scale="0.8" style="hotspot" ath="-5" atv="2" title="RuimteAchter" onclick="js(vr_loadpano(../RuimteAchter/RuimteAchter.xml))" url="../../../img/hotspot.png" />
</krpano>
