<krpano version="1.16">	
	<include url="../../../xml/default.xml" />
	<include url="../../../xml/radar.xml" />
	
	<!-- the pano image, set from the html -->
	<image>
		<cube url="pano_%$side%_%s.jpg" />
	</image>
	
	<data name="is3D">false</data>
	<data name="povOffset">133</data>
	<data name="povX">35</data>
	<data name="povY">-11</data>
	
	<hotspot name="logo" keep="true"
		url="../../../img/logo.png"
		ath="0"
		atv="90"
		scale="0.5"
	/>
	
	<hotspot name="hotspot-0" scale="0.8" style="hotspot" ath="80" atv="2" title="Hal" onclick="js(vr_loadpano(../Hal/Hal.xml))" url="../../../img/hotspot.png" />
	<hotspot name="hotspot-1" scale="0.8" style="hotspot" ath="143" atv="2" title="Lounge" onclick="js(vr_loadpano(../Lounge/Lounge.xml))" url="../../../img/hotspot.png" />
	<hotspot name="hotspot-2" scale="0.8" style="hotspot" ath="94" atv="2" title="Studiezaal" onclick="js(vr_loadpano(../Studiezaal/Studiezaal.xml))" url="../../../img/hotspot.png" />
	<hotspot name="hotspot-3" scale="0.8" style="hotspot" ath="-35" atv="2" title="RuimteMidden" onclick="js(vr_loadpano(../RuimteMidden/RuimteMidden.xml))" url="../../../img/hotspot.png" />	
</krpano>
